<!-- Edit Admin Modal -->
<div
  class="modal fade"
  id="edit"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog new-admin modal-dialog-scrollable">
    <div class="modal-content pt-8 pb-4">
      <div class="modal-header p-0 pb-4  px-8">
        <h5 class="modal-title" id="exampleModalLabel">Edit Admin</h5>
        <button
          type="button"
          class="btn-close text-primary"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body pb-0 pt-4 px-8">
        <div class="border-bottom">
          <h3 class="fs-5 fw-bold mb-4">Account</h3>
          <div class="mb-4">
            <label for="userName" class="form-label small mb-1">Name</label>
            <input
              type="text"
              class="form-control rounded-extra-sm bg-light border-0 p-4"
              id="userName"
              value="Emir Wicks"
            />
          </div>
          <div class="mb-6">
            <label for="userEmail" class="form-label small mb-1">Email</label>
            <input
              type="email"
              class="form-control rounded-extra-sm bg-light border-0 p-4"
              id="userEmail"
              value="emir.wicks@mail.com"
            />
          </div>
        </div>
        <div class="border-bottom pt-6">
          <h3 class="fs-5 fw-bold mb-4">Verification</h3>
          <div class="mb-4 d-flex justify-content-between align-items-center">
            <div class="d-flex">
              <span class="material-icons text-success me-2">
                check_circle
              </span>
              <p class="fw-bold mb-0">Unverified</p>
            </div>
            <span class="small">2020/4/12</span>
          </div>
          <a
            href="#"
            class="btn w-100 border text-gray-400 fw-bold py-4 mb-6 rounded-extra-sm disabled"
            >Send Verification Mail</a
          >
        </div>
        <div class="border-bottom pt-6">
          <h3 class="fs-5 fw-bold mb-4">Access Level</h3>
          <select
            class="form-select border-primary rounded-extra-sm mb-6 p-4"
            aria-label="Default select example"
          >
            <option>-Choose access level-</option>
            <option value="admin" selected>Admin</option>
            <option value="vip_member">VIP Member</option>
            <option value="member">Member</option>
          </select>
        </div>
        <div class="pt-6 border-bottom">
          <h3 class="fs-5 fw-bold mb-4">Custom Access</h3>
          <div class="form-check mb-4">
            <input
              class="form-check-input border-primary rounded-extra-sm"
              type="checkbox"
              value=""
              id="lecture"
            />
            <label class="form-check-label" for="lecture"> Lecture </label>
          </div>
          <div class="form-check mb-4">
            <input
              class="form-check-input border-primary rounded-extra-sm"
              type="checkbox"
              value=""
              id="coupon"
            />
            <label class="form-check-label" for="coupon"> Coupon </label>
          </div>
          <div class="form-check mb-4">
            <input
              class="form-check-input border-primary rounded-extra-sm"
              type="checkbox"
              value=""
              id="message"
            />
            <label class="form-check-label" for="message"> Message </label>
          </div>
          <div class="form-check mb-4">
            <input
              class="form-check-input border-primary rounded-extra-sm"
              type="checkbox"
              value=""
              id="setting"
            />
            <label class="form-check-label" for="setting"> Setting </label>
          </div>
          <div class="form-check mb-6">
            <input
              class="form-check-input border-primary rounded-extra-sm"
              type="checkbox"
              value=""
              id="task_menu"
            />
            <label class="form-check-label" for="task_menu"> Task Menu </label>
          </div>
        </div>
        <div class="pt-6 mb-8">
          <h3 class="fs-5 fw-bold mb-4">Deactivate Account</h3>
          <div class="text-danger d-flex mb-4">
            <span class="material-icons-outlined me-2"> warning </span>
            <p class="mb-0">This cannot be undone!</p>
          </div>
          <a href="#" class="btn btn-outline-danger w-100 rounded-extra-sm py-4"
            >Deactivate This Account</a
          >
        </div>
      </div>
      <div class="modal-footer pt-4 px-8">
        <button
          type="button"
          class="btn btn-outline-success rounded-extra-sm px-8 fw-bold"
          data-bs-dismiss="modal"
        >
          Cancel
        </button>
        <button
          type="button"
          class="btn btn-success rounded-extra-sm px-8 fw-bold"
        >
          Update
        </button>
      </div>
    </div>
  </div>
</div>
