<!-- New Admin Modal -->
<div
  class="modal fade"
  id="newAdmin"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog new-admin modal-dialog-scrollable">
    <div class="modal-content pt-8 pb-4 rounded-extra-sm">
      <div class="modal-header p-0 pb-4  px-8">
        <h5 class="modal-title" id="exampleModalLabel">New Admin</h5>
        <button
          type="button"
          class="btn-close text-primary"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body pb-0 pt-4 px-8">
        <div class="border-bottom">
          <h3 class="fs-5 fw-bold mb-4">Account</h3>
          <div class="mb-4">
            <label for="userName" class="form-label small mb-1">Name</label>
            <input
              type="text"
              class="form-control rounded-extra-sm border-primary py-4 px-4"
              id="userName"
            />
          </div>
          <div class="mb-6">
            <label for="userEmail" class="form-label small mb-1">Email</label>
            <input
              type="email"
              class="form-control rounded-extra-sm  border-primary py-4 px-4"
              id="userEmail"
            />
          </div>
        </div>
        <div class="border-bottom pt-6">
          <h3 class="fs-5 fw-bold mb-4">Verification</h3>
          <div class="mb-4 d-flex">
            <span class="material-icons-outlined text-danger me-2">
              warning
            </span>
            <p class="fw-bold mb-0">Unverified</p>
          </div>
          <a
            href="#"
            class="btn w-100 border text-success fw-bold py-4 mb-6 rounded-extra-sm"
            >Send Verification Mail</a
          >
        </div>
        <div class="border-bottom pt-6">
          <h3 class="fs-5 fw-bold mb-4">Access Level</h3>
          <select
            class="form-select border-primary rounded-extra-sm mb-6 text-secondary px-4 py-4"
            aria-label="Default select example"
          >
            <option selected>-Choose access level-</option>
            <option value="admin">Admin</option>
            <option value="vip_member">VIP Member</option>
            <option value="member">Member</option>
          </select>
        </div>
        <div class="pt-6">
          <h3 class="fs-5 fw-bold mb-4">Custom Access</h3>
          <div class="form-check mb-4">
            <input
              class="form-check-input border-primary rounded-extra-sm"
              type="checkbox"
              value=""
              id="lecture"
            />
            <label class="form-check-label" for="lecture"> Lecture </label>
          </div>
          <div class="form-check mb-4">
            <input
              class="form-check-input border-primary rounded-extra-sm"
              type="checkbox"
              value=""
              id="coupon"
            />
            <label class="form-check-label" for="coupon"> Coupon </label>
          </div>
          <div class="form-check mb-4">
            <input
              class="form-check-input border-primary rounded-extra-sm"
              type="checkbox"
              value=""
              id="message"
            />
            <label class="form-check-label" for="message"> Message </label>
          </div>
          <div class="form-check mb-4">
            <input
              class="form-check-input border-primary rounded-extra-sm"
              type="checkbox"
              value=""
              id="setting"
            />
            <label class="form-check-label" for="setting"> Setting </label>
          </div>
          <div class="form-check mb-8">
            <input
              class="form-check-input border-primary rounded-extra-sm"
              type="checkbox"
              value=""
              id="task_menu"
            />
            <label class="form-check-label" for="task_menu"> Task Menu </label>
          </div>
        </div>
      </div>
      <div class="modal-footer pt-4 px-8">
        <button
          type="button"
          class="btn btn-outline-success rounded-extra-sm px-8 fw-bold"
          data-bs-dismiss="modal"
        >
          Cancel
        </button>
        <button
          type="button"
          class="btn btn-success rounded-extra-sm px-8 fw-bold"
        >
          Add
        </button>
      </div>
    </div>
  </div>
</div>
